<div id="container">
	<div id="header"></div>
	
	<div id="content">
	
		<div class="left half">
			<div id="ojt-login">
				<fieldset class="fieldsets">
					<legend>OJT Login</legend>
					<div id="logged-in">
						<span id='ojt'>Wilson</span>
						<input type="button" value="Logout"/>
					</div>
					<div id="logged-out">
						<table>
						<tr><th class="right-text">Name:</th><td><input type="text"></td></tr>	
						<tr><th class="right-text">Password:</th><td><input type="password"></td></tr>
						<tr><td colspan ="2" class = "center-text"><input type="button" value="Login"/></td></tr>
						</table>
					</div>
				</fieldset>
			</div>
		
			<div id="visitor-login">
				<fieldset class="fieldsets">
					<legend>Visitor Login</legend>
					<table>
						<tr><th class="right-text">ID Number:</th><td><input type="text"></td></tr>	
						<tr><th class="right-text">Subject:</th><td><input type="text"></td></tr>
						<tr><th class="right-text">Adviser:</th><td><input type="text"></td></tr>
						<tr><td colspan ="2" class = "center-text"><input type="button" value="Login"/></td></tr>
						</table>
				</fieldset>
			</div>
		</div>
		
		<div class="right half">
			<div id="print">
				<fieldset class="fieldsets">
					<legend>Print Log</legend>
					Pages: <input type="number" min="0"><br>
					<p id="total"> Total: PHP <span>0.00</span></p> 
					<input type="button" value="Add Record"/>
				</fieldset>
			</div>
			
			<div id="visitors">
				<fieldset class="fieldsets">
					<legend>Visitors</legend>
					<table id="visitors-list">
						<tr><th>Name</th><th>Time-in</th><th>Option</th></tr>
